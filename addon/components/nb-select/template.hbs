{{nb-select-display  type="text" value=display icon=icon menuIcon=menuIcon hint=hint label=label error=error showErrors=showErrors}}
{{#nb-select-dropdown closeDropDown=(action "closeDropDown")}}
    {{#if hasBlock}}
        {{#each displayOptions as | option|}}
            {{yield option  }}
            {{option.display}}
        {{/each}}



    {{else}}
        {{#each displayOptions as | option|}}

            {{component optionComponent value=option.value display=option.display selected=option.selected onSelectOption=(action "onSelectOption" option.value) }}
        {{/each}}

    {{/if}}

{{/nb-select-dropdown}}
